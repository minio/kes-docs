{
	"name": "minio-hugo-docs-theme",
	"version": "1.0.0",
	"description": "Hugo theme for MinIO Documentations",
	"main": "index.html",
	"scripts": {
		"hugo": "hugo server -D",
		"tailwind": "npx tailwindcss -i ./themes/minio-hugo-docs/assets/css/vendors/tailwind.css -o ./themes/minio-hugo-docs/assets/css/utilities.css",
		"dev": "npx tailwindcss -i ./themes/minio-hugo-docs/assets/css/vendors/tailwind.css -o ./themes/minio-hugo-docs/assets/css/utilities.css --watch",
		"start": "npm run tailwind && npm run hugo"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/minio/kes-docs"
	},
	"author": "MinIO Documentation Team",
	"license": "Apache-2.",
	"bugs": {
		"url": "https://github.com/minio/kes-docs/issues"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.9",
		"autoprefixer": "^10.4.14",
		"prettier": "^2.8.4",
		"prettier-plugin-go-template": "^0.0.13",
		"prettier-plugin-tailwindcss": "^0.2.4"
	},
	"browserslist": [
		"last 2 versions"
	],
	"dependencies": {
		"@cfworker/json-schema": "^1.12.5",
		"clipboard": "^2.0.11",
		"flexsearch": "^0.7.31",
		"lodash": "^4.17.21",
		"tailwindcss": "^3.2.7"
	}
}
